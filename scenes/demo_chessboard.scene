# Configuration of the camera
camera:
{
    resolution:
    {
        width = 400;
        height = 400;
    }
    position:
    {
        x = 0.0;
        y = 6.0;
        z = -40.0;
    }
    fieldOfView = 60.0;
    maxDepth = 50;
    focusPoint:
    {
        x = 0.0;
        y = 5.0;
        z = 0.0;
    }
    sceneBackground:
    {
        r = 0.0;
        g = 0.0;
        b = 0.0;
    }
    samples = 100;
}

materials:
{
    material_yellow_mat:
    {
        type = "lambertian";
        color = { r = 255.0; g = 255.0; b = 0.0; }
    }
    material_green_mat:
    {
        type = "lambertian";
        color = { r = 64.0; g = 255.0; b = 0.0; }
    }
    material_cyan_mat:
    {
        type = "lambertian";
        color = { r = 0.0; g = 255.0; b = 255.0; }
    }
    material_red_metal:
    {
        type = "metal";
        fuzziness = 0.0;
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
    material_gray_metal:
    {
        type = "metal";
        fuzziness = 0.8;
        color = { r = 128.0; g = 128.0; b = 128.0; }
    }
    material_light:
    {
        type = "lightDiffuse";
        color = { r = 255.0; g = 255.0; b = 255.0; }
    }
    material_cube:
    {
        type = "lambertian";
        color = { r = 255.0; g = 0.0; b = 0.0; }
