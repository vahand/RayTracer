# Configuration of the camera
camera:
{
    resolution:
    {
        width = 400;
        height = 400;
    }
    position:
    {
        x = -8.0;
        y = 5.0;
        z = -26.0;
    }
    fieldOfView = 55.0; # In degree
    maxDepth = 50;
    focusPoint:
    {
        x = 0.0;
        y = 2.0;
        z = 0.0;
    }
    sceneBackground:
    {
        r = 0.0;
        g = 0.0;
        b = 0.0;
    }
    samples = 1000;
}

materials:
{
    material_white_light:
    {
        type = "lightDiffuse";
        color = { r = 255.0; g = 255.0; b = 255.0; }
    }
    material_red_light:
    {
        type = "lightDiffuse";
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
    material_blue_light:
    {
        type = "lightDiffuse";
        color = { r = 0.0; g = 0.0; b = 255.0; }
    }
    material_green_light:
    {
        type = "lightDiffuse";
        color = { r = 0.0; g = 255.0; b = 0.0; }
    }
    material_purple_metal:
    {
        type = "lambertian";
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
    material_blackwhite_chessboard:
    {
        type = "chessBoard";
        color1 = { r = 255.0; g = 255.0; b = 255.0; }
        color2 = { r = 255.0; g = 0.0; b = 0.0; }
    }
    material_ground:
    {
        type = "lambertian";
        color = { r = 255.0; g = 255.0; b = 0.0; }
    }
    material_ceilling:
    {
        type = "lambertian";
        color = { r = 0.0; g = 255.0; b = 0.0; }
    }
    material_roof:
    {
        type = "metal";
        fuzziness = 1.0;
        color = { r = 102.0; g = 51.0; b = 0.0; }
    }
    meterial_red_metal:
    {
        type = "metal";
        fuzziness = 0.3;
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
}

# Primitives in the scene
primitives:
{
    # Sphere = 0
    # Plane = 1
    # Cone = 2
    # Cylinder = 3
    # Cube = 4
    # Wall = 5

    cone1:
    {
        type = 2;
        origin = { x = -10.0; y = 15.0; z = 90.0; };
        radius = 2.0;
        height = 5.0;
        material = "material_purple_metal";
        axis = "Y";
        angle = 45.0;
    }
    blueLight1:
    {
        type = 0;
        origin = { x = -10.0; y = 3.0; z = 0.0; };
        material = "material_blue_light";
        radius = 2.0;
    }
    mainSphereLight:
    {
        type = 0;
        origin = { x = -0.0; y = 3.0; z = -30.0; };
        material = "material_white_light";
        radius = 4.0;
    }
    redMetal1:
    {
        type = 0;
        origin = { x = 0.0; y = 3.0; z = 0.0; };
        material = "meterial_red_metal";
        radius = 2.0;
    }
    whiteLight1:
    {
        type = 0;
        origin = { x = 10.0; y = 3.0; z = 0.0; };
        material = "material_white_light";
        radius = 2.0;
    }
    plane:
    {
        type = 1;
        origin = { x = 0.0; y = 0.0; z = 0.0; };
        material = "material_blackwhite_chessboard";
        axis = "Y"
    }
}
